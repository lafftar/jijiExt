{
  "manifest_version": 3,
  "name": "Jiji WhatsApp Button",
  "version": "1.0.0",
  "description": "Adds a Text on WhatsApp button to Jiji.ng product pages",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["https://jiji.ng/*/*.html*", "https://www.jiji.ng/*/*.html*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {}
}
